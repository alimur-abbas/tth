<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" >
    <aura:attribute name="greeting" type="String" default="Hello World" />
    <lightning:card title="{!v.greeting}">
        <p class="slds-p-horizontal_small">
            {!v.greeting}!!
        </p>
        <lightning:button variant="Brand" label="{!v.greeting}" title="Destructive action" class="slds-align_absolute-center" onclick="{!c.capitalize}" />
    </lightning:card>
</aura:component>